<div id="main">
    <div>
        <h1>Modify Portfolio</h1>
        <div>
            {{#if isLoggedIn}}
            {{#if isAdmin}}
            <form action="/portfolio/edit/{{portfolio.pid}}" method="post">
                <fieldset>
                    <label for="newname">New Name:</label>
                    <input type="text" name="newname" id="newname" value="{{portfolio.pname}}" required="required">
                    <br />
                    <label for="newyear">New Year:</label>
                    <input type="number" name="newyear" id="newyear" placeholder="2023" value="{{portfolio.pname}}" required="required">
                    <br />
                    <textarea name="newdesc" id="newdesc" cols="30" rows="10" required="required">{{portfolio.pdesc}}</textarea>
                    <br />
                    <label for="newtype">New Type:</label>
                    <select name="newtype" id="newtype" required="required">
                        <option value="Research"{{#theTypeR}}{{ theTypeR portfolio.ptype }} selected="selected"{{/theTypeR}}>Research</option>
                        <option value="Education"{{#theTypeT}}{{ theTypeT portfolio.ptype }} selected="selected"{{/theTypeT}}>Education</option>
                        <option value="Other" {{#theTypeR}}{{theTypeO portfolio.ptype}} selected="selected"{{/theTypeR}}>Other</option>
                    </select>
                    <br />
                    <label for="newimg">New Image URL:</label>
                    <input type="text" name="newimg" id="newimg" placeholder="/img/"  value="{{portfolio.pimgURL}}" required="required">
                    <br />
                </fieldset>
                <input type="submit" value="Add Portfolio">
            </form>
            {{else}}
            <p>Sorry you are not a Admin</p>
            {{/if}}
            {{else}}
            <p>Sorry you are not logged in! <br />
                Please go to <a href="/login"></a>
            </p>
            {{/if}}
        </div>
    </div>
</div>